<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
]>
<component>
	<tag>yahooWeather</tag>
	<tagClass>com.googlecode.mashups4jsf.component.YahooWeatherTag</tagClass>
	<componentClass>com.googlecode.mashups4jsf.component.YahooWeather</componentClass>
	<componentType>com.googlecode.mashups4jsf.component.YahooWeather</componentType>
	<componentFamily>com.googlecode.mashups4jsf.YahooWeather</componentFamily>
	<rendererType>com.googlecode.mashups4jsf.component.YahooWeatherRenderer</rendererType>
	<rendererClass>com.googlecode.mashups4jsf.component.YahooWeatherRenderer</rendererClass>
	<parent>javax.faces.component.UIOutput</parent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>locationCode</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>94089</defaultValue>				
			<description>The zip code of the location</description>
		</attribute>
		<attribute>
			<name>temperatureType</name>
			<required>false</required>	
			<type>java.lang.String</type>
			<defaultValue>c</defaultValue>				
			<description>Fahrenheit (f) or Celsius (c)</description>
		</attribute>
	</attributes>
</component>