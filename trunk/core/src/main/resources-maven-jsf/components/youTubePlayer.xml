<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
]>
<component>
	<tag>youTubePlayer</tag>
	<tagClass>com.googlecode.mashups4jsf.component.youtube.YouTubePlayerTag</tagClass>
	<componentClass>com.googlecode.mashups4jsf.component.youtube.YouTubePlayer</componentClass>
	<componentType>com.googlecode.mashups4jsf.YouTubePlayer</componentType>
	<componentFamily>com.googlecode.mashups4jsf</componentFamily>
	<rendererType>com.googlecode.mashups4jsf.component.youtube.YouTubePlayerRenderer</rendererType>
	<rendererClass>com.googlecode.mashups4jsf.component.youtube.YouTubePlayerRenderer</rendererClass>
	<parent>javax.faces.component.UIOutput</parent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>videoID</name>
			<required>true</required>
			<type>java.lang.String</type>				
			<description>The video ID to be displayed</description>
		</attribute>
		<attribute>
			<name>width</name>
			<required>false</required>	
			<type>java.lang.String</type>
			<defaultValue>425</defaultValue>				
			<description>The width of the player</description>
		</attribute>
		<attribute>
			<name>height</name>
			<required>false</required>	
			<type>java.lang.String</type>
			<defaultValue>344</defaultValue>				
			<description>The height of the player</description>
		</attribute>		
		<attribute>
			<name>bgcolor</name>
			<required>false</required>	
			<type>java.lang.String</type>
			<defaultValue>#cccccc</defaultValue>				
			<description>The background color of the player</description>
		</attribute>			
		
	</attributes>
</component>